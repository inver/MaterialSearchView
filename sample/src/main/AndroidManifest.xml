<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ColoredActivity"
            android:label="@string/title_activity_colored" />
        <activity
            android:name=".DefaultActivity"
            android:label="@string/title_activity_default" />
        <activity
            android:name=".VoiceActivity"
            android:label="@string/title_activity_voice" />
        <activity
            android:name=".StickyActivity"
            android:label="@string/title_activity_sticky" />
        <activity
            android:name=".TabActivity"
            android:label="@string/title_activity_tab" />
        <activity
            android:name=".InputTypeActivity"
            android:label="@string/title_activity_input_type" />
    </application>
</manifest>
